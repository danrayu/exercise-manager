<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_margin="4dp"
    android:background="@drawable/rectangle_radius_corners"
    android:backgroundTint="@color/teal_200">

    <TextView
        android:id="@+id/tv_targetmuscle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big muscle"
        android:layout_margin="2dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_remove_targetmuscle"/>

    <ImageButton
        android:id="@+id/btn_remove_targetmuscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_background_button"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_targetmuscle_name"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>